{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}.cpp",
                "-o",
                "${workspaceFolder}/_.out",
                "-std=c++20"
            ]
        },
        {
            "label": "Run C++",
            "type": "shell",
            "command": "${workspaceFolder}/_.out",
            "args": [
                "<",
                "${workspaceFolder}/in.txt",
                ">",
                "${workspaceFolder}/out.txt",
                "2>",
                "${workspaceFolder}/err.txt"
            ]
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build C++",
                "Run C++",
            ]
        },
