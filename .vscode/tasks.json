        */
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "contestName",
            "description": "Name your contest.",
            "default": "ABC"
        },
        {
            "type": "promptString",
            "id": "problemName",
            "description": "Name your problem.",
            "default": "A"
        }
    ]
}